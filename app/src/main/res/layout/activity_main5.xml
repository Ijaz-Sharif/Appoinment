<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sharif.appointment.Main5Activity">
    <VideoView
        android:id="@+id/video4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/name4"
            android:paddingLeft="20dp"
            android:textColor="#fff"
            android:background="@drawable/style"
            android:hint="Re-enter patient name"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/leaving_plave4"
            android:layout_marginTop="20dp"
            android:background="@drawable/style"
            android:layout_marginRight="40dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/name4"></Spinner>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/doctor4"
            android:paddingRight="5dp"
            android:background="@drawable/style"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/leaving_plave4"></Spinner>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/day4"
            android:paddingRight="5dp"
            android:background="@drawable/style"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/doctor4"></Spinner>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day4"
            android:layout_marginTop="30dp"
            android:background="@drawable/style"
            android:text="Confirm"
            android:id="@+id/save4"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
